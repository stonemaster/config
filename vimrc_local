" D specific additions
map <F2> :DUjump<CR>
map <F1> :DUddoc<CR>

set smartcase

" Linux specific
let g:dutyl_stdImportPaths=['/usr/include/dmd/druntime/import/','/usr/include/dmd/phobos/']

